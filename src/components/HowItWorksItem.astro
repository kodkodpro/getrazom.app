---
const { number, icon, title } = Astro.props
---
<div class="text-center">
  <div class="mb-4 text-7xl">
    {icon}
  </div>
  <h3 class="mb-1 text-xl font-bold tracking-tight md:mb-2 md:text-4xl">
    <span class="text-brand-500">{number}.</span>
    {title}
  </h3>
  <div class="text-slate-600 dark:text-slate-300 md:text-lg">
    <slot />
  </div>
</div>
