---
import { t } from "i18next"
import { Picture } from "@astrojs/image/components"

import MobileAppImage from "../assets/images/marketing-app-project-view.png"
import ButtonLink from "./ButtonLink.astro"
import Container from "./Container.astro";
---

<Container class="relative flex flex-1 items-center justify-center">
  <div class="pr-24 md:pr-48">
    <div class="mb-4 text-4xl sm:text-6xl md:text-right md:text-8xl">
      ðŸš€
    </div>

    <h1 class="mb-2 text-3xl font-extrabold tracking-tight sm:text-5xl md:mb-4 md:text-7xl">
      {t("hero.title")}
    </h1>

    <p class="mb-4 text-lg text-slate-400 sm:text-xl md:mb-8 md:text-3xl">
      {t("hero.subTitle")}
    </p>

    <ButtonLink href="#join-beta">
      {t("hero.button")}
    </ButtonLink>
  </div>

  <div class="absolute -right-36 top-1/2 z-50 h-full w-[250px] -translate-y-1/2 -rotate-12 md:-right-48 md:w-[350px]">
    <Picture
      src={MobileAppImage}
      widths={[200, 400, 800]} sizes="(max-width: 800px) 100vw, 800px"
      alt="Picture of mobile app"
      class="object-contain"
    />
  </div>
</Container>
