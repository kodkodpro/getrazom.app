---
import { t } from "i18next"
import { Trans } from "astro-i18next/components"

import Container from "./Container.astro"
import Waves from "./Waves.astro"
---
<Waves wavesColor="fill-slate-900" bgColor="bg-brand-500 dark:bg-slate-400" />

<div id="contact" class="bg-slate-900 py-24 text-slate-400">
  <Container small>
    <h2 class="mb-2 text-3xl font-extrabold tracking-tight text-slate-100 dark:text-slate-200 sm:text-5xl md:mb-4 md:text-7xl">
      {t("fromCreator.title")}
    </h2>

    <div class="space-y-4 md:text-xl">
      <Trans i18nKey="fromCreator.text">
        <p></p>
        <p></p>
        <p></p>
        <p></p>
      </Trans>
      <p>
        <a
          href="mailto:andrew@kodkod.me"
          class="font-medium text-slate-100 hover:text-slate-300 dark:text-slate-200 dark:hover:text-slate-300"
        >
          andrew@kodkod.me
        </a>
      </p>
    </div>
  </Container>
</div>
