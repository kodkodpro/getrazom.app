---
import Container from "./Container.astro"

const items = [
  {
    label: "Features",
    link: "#features",
  },
  {
    label: "How It Works",
    link: "#how-it-works",
  },
  {
    label: "Beta Access",
    link: "#join-beta",
  },
  {
    label: "Contact",
    link: "#contact",
  },
];
---



<Container class="flex items-center justify-between py-6">
  <a href="/" class="-translate-y-[5px] text-4xl font-bold tracking-tighter">
    Razom
  </a>

  <ul class="hidden lg:gap-x-2 md:flex">
    {items.map(({ label, link }) => (
      <li>
        <a
          href={link}
          class="whitespace-nowrap rounded-full px-4 py-2 font-medium hover:bg-white/5"
        >
          {label}
        </a>
      </li>
    ))}
  </ul>

  <div class="hidden lg:block">
    <a
      href="#join-beta"
      class="whitespace-nowrap rounded-full bg-white/5 px-5 py-2.5 text-xl font-semibold hover:bg-white/10"
    >
      Join the Private Beta
    </a>
  </div>
</Container>
