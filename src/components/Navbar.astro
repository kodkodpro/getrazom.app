---
import { t } from "i18next"

import LanguageSwitcher from "./LanguageSwitcher.astro"
import Container from "./Container.astro"

const items = [
  {
    label: t("navbar.features"),
    link: "#features",
  },
  {
    label: t("navbar.howItWorks"),
    link: "#how-it-works",
  },
  {
    label: t("navbar.betaAccess"),
    link: "#join-beta",
  },
  {
    label: t("navbar.contact"),
    link: "#contact",
  },
]
---



<Container class="flex items-center justify-between py-6">
  <a href="/" class="translate-y-[-5px] text-4xl font-bold tracking-tighter text-white">
    Razom
  </a>

  <ul class="hidden md:flex lg:gap-x-2">
    {items.map(({ label, link }) => (
      <li>
        <a
          href={link}
          class="whitespace-nowrap rounded-full px-4 py-2 font-medium hover:bg-white/5"
        >
          {label}
        </a>
      </li>
    ))}
  </ul>

  <LanguageSwitcher />
</Container>
